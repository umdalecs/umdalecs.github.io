<Layout title="Alejandro Flores">
  <header class="flex justify-between p-4">
    <h2>Alejandro Flores</h2>
    <nav class="flex gap-4">
      <a href="#projects">Projects</a>
      <a href="#contact">Contact</a>
    </nav>
